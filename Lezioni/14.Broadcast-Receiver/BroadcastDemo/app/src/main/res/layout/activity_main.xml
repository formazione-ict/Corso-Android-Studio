<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtNetworkStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stato rete: sconosciuto"
        android:textSize="18sp"
        android:padding="8dp" />

    <Button
        android:id="@+id/btnSendCustomBroadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Invia broadcast personalizzato"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/txtCustomBroadcastStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Broadcast personalizzato non ancora ricevuto"
        android:textSize="16sp"
        android:padding="8dp"
        android:layout_marginTop="16dp" />

</LinearLayout>
